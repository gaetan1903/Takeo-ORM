# Takeo-ORM Database Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control!

# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=takeo_orm

# SSL Configuration (optional)
DB_SSLMODE=disable

# Development settings (optional)
TAKEO_DEBUG=false
TAKEO_LOG_LEVEL=info

# Example production settings (commented out)
# DB_HOST=your-production-host.com
# DB_PORT=5432
# DB_USER=takeo_prod_user
# DB_PASSWORD=your-super-secure-production-password
# DB_NAME=takeo_production
